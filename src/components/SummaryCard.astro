---
import { kpis, formatCurrency } from "../data/financials";
---

<div class="card-standard flex flex-col h-full">
    <h3 class="text-section-title mb-6 flex items-center gap-2">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-muted"
        >
            <path d="M3 21h18"></path>
            <path d="M3 10h18"></path>
            <path d="M3 6h18"></path>
            <rect x="5" y="14" width="14" height="7" rx="0"></rect>
        </svg>
        Resumo Financeiro
    </h3>

    <div class="flex flex-col gap-4 flex-1">
        <!-- Construction Cost -->
        <div
            class="flex justify-between items-center py-3 border-b border-border"
        >
            <div class="flex items-center gap-3">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-muted"
                >
                    <path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"></path>
                    <path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"></path>
                    <path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"></path>
                    <path d="M10 6h4"></path>
                    <path d="M10 10h4"></path>
                    <path d="M10 14h4"></path>
                    <path d="M10 18h4"></path>
                </svg>
                <span class="text-body text-muted">Custo da Obra</span>
            </div>
            <span class="text-body"
                >{formatCurrency(kpis.constructionCost)}</span
            >
        </div>

        <!-- ADM Fee -->
        <div
            class="flex justify-between items-center py-3 border-b border-border"
        >
            <div class="flex items-center gap-3">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-muted"
                >
                    <path
                        d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1-2 1Z"
                    ></path>
                    <path d="M14 8H8"></path>
                    <path d="M16 12H8"></path>
                    <path d="M13 16H8"></path>
                </svg>
                <span class="text-body text-muted">ADM 15%</span>
            </div>
            <span class="text-body">{formatCurrency(kpis.adminFee)}</span>
        </div>

        <!-- Total Spent -->
        <div class="flex justify-between items-center py-3 mt-auto">
            <span class="text-body-emphasis">Total Gasto</span>
            <span class="text-body-emphasis"
                >{formatCurrency(kpis.totalSpent)}</span
            >
        </div>
    </div>
</div>
