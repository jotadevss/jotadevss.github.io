---
import { formatCurrency } from "../data/financials";

const totalValue = 6102.0;
const savingsValue = 915.3;
---

<div
    class="card-contrast relative overflow-hidden group border border-[#FF5A1F]/20"
>
    <!-- Flashy accent gradient background/glow -->
    <div
        class="absolute -right-20 -top-20 w-96 h-96 bg-[#FF5A1F] opacity-10 blur-[100px] rounded-full group-hover:opacity-20 transition-opacity duration-700"
    >
    </div>
    <div
        class="absolute -left-20 -bottom-20 w-64 h-64 bg-[#FF5A1F] opacity-5 blur-[80px] rounded-full"
    >
    </div>

    <div
        class="flex flex-col lg:flex-row items-center justify-between gap-6 relative z-10"
    >
        <div class="flex items-start md:items-center gap-5 w-full lg:w-auto">
            <div
                class="p-3 bg-gradient-to-br from-[#FF5A1F] to-orange-700 rounded-lg text-white shadow-lg shadow-orange-900/20 shrink-0"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="28"
                    height="28"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"
                    ></path>
                    <path d="M3 6h18"></path>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
            </div>
            <div class="space-y-1">
                <div class="flex items-center gap-2">
                    <h3 class="text-lg font-medium text-white">
                        Item Externo: Ar-Condicionados
                    </h3>
                    <span
                        class="px-2 py-0.5 rounded-full bg-[#FF5A1F]/20 text-[#FF5A1F] text-[10px] uppercase font-bold tracking-wider border border-[#FF5A1F]/20"
                    >
                        Economia
                    </span>
                </div>
                <p
                    class="text-sm text-gray-400 font-light max-w-2xl leading-relaxed"
                >
                    A compra dos 3 ar-condicionados foi realizada fora do
                    controle da Nagila,
                    <span class="text-gray-200"
                        >eliminando a taxa de administração</span
                    >.
                </p>
            </div>
        </div>

        <div
            class="flex items-center gap-6 w-full lg:w-auto justify-between lg:justify-end border-t lg:border-t-0 lg:border-l border-white/10 pt-4 lg:pt-0 lg:pl-8"
        >
            <div class="text-right">
                <p
                    class="text-[10px] uppercase tracking-wider text-gray-500 mb-1"
                >
                    Custo Total
                </p>
                <p
                    class="text-sm text-gray-400 font-light line-through decoration-white/20"
                >
                    {formatCurrency(totalValue)}
                </p>
            </div>
            <div class="text-right">
                <p
                    class="text-[10px] uppercase tracking-wider text-[#FF5A1F] mb-1 font-bold"
                >
                    Economia (15%)
                </p>
                <p class="text-2xl font-light text-white tracking-tight">
                    {formatCurrency(savingsValue)}
                </p>
            </div>
        </div>
    </div>
</div>
